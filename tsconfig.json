{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "module": "Node16",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./node_modules"],
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "app.d.ts"
  ],
  "extends": "expo/tsconfig.base"
}
